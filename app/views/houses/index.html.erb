<div class="row">
    <div class="col-md-3">
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Your Listings", houses_path, class: "sidebar-link active" %></li>
            <li class="sidebar-item"><%= link_to "Your Viewings", your_viewings_path, class: "sidebar-link" %></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Listings
            </div>
            <div class="panel-body">
                <% @houses.each do |house| %>
                <div class="row">
                    <div class="col-md-2">
                        <%= image_tag house.photos[0].image.url(:thumb) if house.photos.length > 0 %>
                    </div>
                    <div class="col-md-7">
                        <h4><%= house.listing_name %></h4>
                    </div>
                    <div class="col-md-3">
                        <%= link_to "Update", edit_house_path(house), class: "btn btn-primary" %>
                    </div>
                </div>
                <hr>
                <% end %>
            </div>
        </div>
    </div>
</div>
