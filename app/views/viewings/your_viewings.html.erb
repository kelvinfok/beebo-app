<div class="row">
    <div class="col-md-3">
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Your Listings", houses_path, class: "sidebar-link" %></li>
            <li class="sidebar-item"><%= link_to "Your Listings", your_viewings_path, class: "sidebar-link active" %></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Your Viewings
            </div>
            <div class="panel-body">
                <% @your_viewings.each do |viewing| %>
                <div class="row">
<div class="col-md-2">
<%= viewing.appointment_date %>
</div>

<div class="col-md-6">
  <%= link_to house_path(viewing.house) do %>
<%= image_tag viewing.house.photos[0].image.url(:thumb) if viewing.house.photos[0] %>
<% end %>
</div>

<div class="col-md-2">
  <%= link_to user_path(viewing.house.user) do %>
<%= image_tag avatar_url(viewing.house.user) %>
<% end %>
</div>

<div class="col-md-2 right">
viewing.house.price
</div>
                </div>
                <hr>
                <% end %>
            </div>
        </div>
    </div>
</div>
