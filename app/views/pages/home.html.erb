<br>
<div class="text-center">
	<h2>Which house do you want to buy today?</h2>
</div>
<br>


<%= form_tag search_path, method: :get do %>
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-6">
			<%= text_field_tag :search, params[:search], placeholder: "", class: "form-control search-input", style: 'color=#FFFF00'%>
		</div>
		<div class="col-md-3">
		</div>
	</div>
	<br>
<div class="row">
	<div class="col-md-5"></div>
	<div class="col-md-2">
		<%= submit_tag "Search", class: "btn btn-primary wide" %>
	</div>
	<div class="col-md-5"></div>
</div>
<% end %>

<br>

<div class="text-center">
	<h4>Connect with home-owners directly, all around Singapore</h4>
</div>
<br>

<div class="row">
  <% @houses.each do |house| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview preview-index">
        <%= image_tag house.photos[0].image.url(:medium) if house.photos.length > 0 %>
      </div>
      <div class="panel-body">
        <%= link_to house.listing_name, house %>
      </div>
    </div>
  </div>
  <% end %>
</div>
